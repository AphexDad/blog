---
import Layout from "@layouts/Layout.astro";
import Paginator from "@components/Paginator.astro";
import PostPreviewList from "@components/PostPreviewList.astro";
import PageHeader from "@components/PageHeader.astro";
import { PAGE_SIZE } from '@config';

export async function getStaticPaths({ paginate }) {
    const allPosts = await Astro.glob('../../posts/*.md');
    const allTags = new Set()
    allPosts.map(post => {
        post.frontmatter.tags && post.frontmatter.tags.map(tag => allTags.add(tag.toLowerCase()))
    })
    return Array.from(allTags).map((tag) => {
        const filteredPosts = allPosts.filter((post) => post.frontmatter.tags.includes(tag))
        return paginate(filteredPosts, {
            params: { tag },
            pageSize: PAGE_SIZE
        });
    });
};

const { page } = Astro.props;
const { tag } = Astro.params;
const title = `Tag:${tag}`;
const description = `All posts with the tag "${tag}".`;
const postPreviewHeading = "h2";
---

<Layout title={title} description={description}>
    <PageHeader title={title} description={description} />
    <PostPreviewList posts={page.data} heading={postPreviewHeading} />
    <Paginator page={page} />
</Layout>
